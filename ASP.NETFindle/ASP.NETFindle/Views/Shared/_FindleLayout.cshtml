@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NETFindle</title>
    <link rel="manifest" href="~/manifest.json">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/findlelayout.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <header>

        @*@if (Context.Session.GetString("FirstName") != null)
        {*@
            <nav class="navbar navbar-expand-lg static-top mb-4">
                <div class="container">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="User" asp-action="Index">
                        <img src="~/img/Findl192x192.png" width="50" height="50" alt="">
                        Findle
                    </a>
                    <button class="navbar-toggler navbar-dark text-black-50" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse px-5" id="navbarResponsive">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item active">
                                <a class="nav-link custom-underline" asp-area="" asp-controller="User" asp-action="Index">Home<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-underline" asp-area="" asp-controller="User" asp-action="GetFloor">Set Location</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-underline" asp-area="" asp-controller="User" asp-action="PersonalDetails">Personal details</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link add-button" href="">Install app</a>
                            </li>
                        </ul>
                        <a href="#" class="nav-link" data-toggle="modal" data-target="#sign-out"><i class="fa fa-sign-out text-white fa-lg"></i></a>
                    </div>
                </div>
            </nav>
            @*}*@

            <!--Modal-->
            <div class="modal fade" id="sign-out">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Wil je uitloggen?</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            Klik Uitloggen om uit te loggen
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" data-dismiss="modal">Hier blijven</button>
                            <form asp-controller="User" asp-action="Logout">
                                <button type="submit" class="btn btn-danger">Uitloggen</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--Modaln't-->

        </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>