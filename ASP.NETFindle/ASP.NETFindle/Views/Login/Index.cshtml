@model ASP.NETFindle.Models.Login

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Login";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NETFindle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css">
</head>

<body>
    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

    <div class="d-flex justify-content-center align-items-center login-container px-2">
        <form class="login-form text-center" asp-controller="Login" asp-action="Login" method="post">
            <h1 class="mb-5 font-weight-light text-uppercase">@ViewData["Title"]</h1>
            <div class="form-group">
                <p><label asp-for="Email"></label></p>
                <input asp-for="Email" class="form-control rounded form-control-lg" id="InputEmail" name="email">
            </div>
            <div class="form-group">
                <p><label asp-for="Password"></label></p>
                <input type="password" asp-for="Password" class="form-control rounded form-control-lg" id="InputPassword" name="password">
            </div>
            <div class="forgot-link form-group d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="remember">
                    <label class="form-check-label" for="remember">Remember me</label>
                </div>
                <a>Forgot password?</a>
            </div>
            <button type="submit" class="btn mt-5 rounded btn-lg btn-custom btn-block text-uppercase">Login</button>
        </form>
    </div>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>